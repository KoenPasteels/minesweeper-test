<UserControl x:Class="View.Screens.SettingsScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <TextBlock Grid.Row="1" Text="Board Size" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Slider Grid.Row="1" VerticalAlignment="Top" Margin="250,37,250,0" Minimum="{Binding MinimumSlider}" Maximum="{Binding MaximumSlider}"/>
        <CheckBox Grid.Row="1" IsChecked="True" HorizontalAlignment="Center" VerticalAlignment="Bottom">Flooding</CheckBox>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Content="Play" Command="{Binding SwitchToPlayScreen}"/>
        </Grid>
    </Grid>
</UserControl>
